# ================================================
# Real-Time Financial Market Sentiment Predictor
# Environment Configuration Template
# ================================================
# Copy this file to .env and fill in your values
# DO NOT commit .env to version control

# -------------------- PostgreSQL --------------------
POSTGRES_USER=mlops_user
POSTGRES_PASSWORD=mlops_secure_password_123
POSTGRES_DB=mlops_warehouse
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# -------------------- MinIO (S3 Compatible) --------------------
MINIO_ROOT_USER=minio_admin
MINIO_ROOT_PASSWORD=minio_secure_password_123
MINIO_ENDPOINT=minio:9000
MINIO_ACCESS_KEY=minio_admin
MINIO_SECRET_KEY=minio_secure_password_123

# Bucket names
MINIO_BUCKET_RAW=raw-data
MINIO_BUCKET_PROCESSED=processed-data
MINIO_BUCKET_MLFLOW=mlflow-artifacts

# -------------------- MLflow --------------------
MLFLOW_TRACKING_URI=http://mlflow:5000
MLFLOW_S3_ENDPOINT_URL=http://minio:9000
MLFLOW_BACKEND_STORE_URI=postgresql://mlops_user:mlops_secure_password_123@postgres:5432/mlops_warehouse
MLFLOW_ARTIFACT_ROOT=s3://mlflow-artifacts

# Required for MLflow S3 access
AWS_ACCESS_KEY_ID=minio_admin
AWS_SECRET_ACCESS_KEY=minio_secure_password_123

# -------------------- Airflow --------------------
AIRFLOW_UID=50000
AIRFLOW__CORE__EXECUTOR=LocalExecutor
AIRFLOW__CORE__FERNET_KEY=generate_your_own_fernet_key_here
AIRFLOW__DATABASE__SQL_ALCHEMY_CONN=postgresql+psycopg2://mlops_user:mlops_secure_password_123@postgres:5432/mlops_warehouse
AIRFLOW__CORE__LOAD_EXAMPLES=false
AIRFLOW__WEBSERVER__SECRET_KEY=your_webserver_secret_key_here

# Airflow admin user
_AIRFLOW_WWW_USER_USERNAME=airflow
_AIRFLOW_WWW_USER_PASSWORD=airflow

# -------------------- Redpanda --------------------
REDPANDA_BROKERS=redpanda:9092

# -------------------- Grafana --------------------
GF_SECURITY_ADMIN_USER=admin
GF_SECURITY_ADMIN_PASSWORD=admin
GF_INSTALL_PLUGINS=grafana-piechart-panel

# -------------------- Project Settings --------------------
PROJECT_NAME=financial-sentiment-predictor
ENVIRONMENT=development
LOG_LEVEL=INFO
